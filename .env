# Spotify Data Pipeline - Environment Variables

# Database Configuration (Docker internal hostnames)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=

# Kafka Configuration (Docker internal)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_STREAMING=streaming-events

# Data Generation Settings
DATA_GENERATION_INTERVAL=60
USERS_TO_GENERATE=1000
ARTISTS_TO_GENERATE=500
TRACKS_TO_GENERATE=5000
STREAMING_EVENTS_PER_MINUTE=1000

# Pipeline Settings
PIPELINE_MODE=streaming  # Options: streaming, batch
PIPELINE_WINDOW_SIZE=60  # Window size in seconds for streaming pipeline
PIPELINE_FREQUENCY=300   # How often to run the pipeline in seconds

# Airflow Settings
AIRFLOW__CORE__FERNET_KEY=46BKJoQYlPPOexq0OhDZnIlNepKFf87WFwLbfzqDDho=
AIRFLOW_UID=50000

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Path Settings
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_ANALYTICS_PATH=./data/analytics

# MinIO configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_URL=http://minio:9000

# Airflow configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://spotify_user:spotify_password@postgres/airflow
AIRFLOW__CORE__LOAD_EXAMPLES=False 